      },
      4: {
        name: "Lockheed Meme",
        image: "/lockheed.png",
        price: "$0.56",
        volume: "10",
        marketCap: "$5,600",
        status: "Active",
        change24h: "+0.87%",
        change7d: "+4.32%",
        ath: "$0.78",
        description: "Lockheed Meme represents the intersection of aerospace technology and meme culture. A niche but dedicated community drives its steady growth."
      }
    };

    // Background music control
    document.addEventListener('DOMContentLoaded', () => {
      const music = document.getElementById('background-music');
      const soundToggle = document.getElementById('sound-toggle');
      const soundOnIcon = document.getElementById('sound-on-icon');
      const soundOffIcon = document.getElementById('sound-off-icon');
      
      let musicPlaying = false;
      
      // Function to play music after user interaction
      function playMusic() {
        if (!musicPlaying && music instanceof HTMLAudioElement) {
          music.play().then(() => {
            musicPlaying = true;
            soundOnIcon?.classList.remove('hidden');
            soundOffIcon?.classList.add('hidden');
          }).catch(error => {
            console.error("Audio play failed:", error);
          });
        }
      }
      
      // Toggle music on/off
      soundToggle?.addEventListener('click', () => {
        if (musicPlaying && music instanceof HTMLAudioElement) {
          music.pause();
          musicPlaying = false;
          soundOnIcon?.classList.add('hidden');
          soundOffIcon?.classList.remove('hidden');
        } else {
          playMusic();
        }
      });
      
      // Listen for the intro screen dismissed event
      document.addEventListener('introScreenDismissed', () => {
        // Music should already be playing from the intro button click
        // Just update our state to reflect that
        musicPlaying = true;
        soundOnIcon?.classList.remove('hidden');
        soundOffIcon?.classList.add('hidden');
      });
      
      // Navigation functionality
      const navLinks = document.querySelectorAll('.nav-link');
      const contentSections = document.querySelectorAll('.content-section');
      
      navLinks.forEach(link => {
        link.addEventListener('click', (e) => {
          e.preventDefault();
          
          // Remove active class from all nav links
          navLinks.forEach(nav => {
            nav.classList.remove('bg-blue-700', 'rounded');
          });
          
          // Add active class to clicked nav link
          link.classList.add('bg-blue-700', 'rounded');
          
          // Hide all content sections
          contentSections.forEach(section => {
            section.classList.add('hidden');
          });
          
          // Show the corresponding content section
          const targetId = link.id.replace('nav-', '') + '-section';
          const targetSection = document.getElementById(targetId);
          if (targetSection) {
            targetSection.classList.remove('hidden');
          }
        });
      });
      
      // Meme card click functionality
      const memeCards = document.querySelectorAll('.meme-card');
      const modal = document.getElementById('meme-modal');
      const closeModal = document.getElementById('close-modal');
      
      memeCards.forEach(card => {
        card.addEventListener('click', () => {
          const memeId = card.getAttribute('data-meme-id');
          const meme = memeData[memeId];
          
          if (meme) {
            // Update modal content
            document.getElementById('modal-title').textContent = meme.name;
            const modalImg = document.getElementById('modal-image');
            if (modalImg instanceof HTMLImageElement) {
              modalImg.src = meme.image;
              modalImg.alt = meme.name;
            }
            document.getElementById('modal-price').textContent = meme.price;
            document.getElementById('modal-volume').textContent = meme.volume;
            document.getElementById('modal-market-cap').textContent = meme.marketCap;
            document.getElementById('modal-status').textContent = meme.status;
            document.getElementById('modal-change').textContent = meme.change24h;
            document.getElementById('modal-change-7d').textContent = meme.change7d;
            document.getElementById('modal-ath').textContent = meme.ath;
            document.getElementById('modal-description').textContent = meme.description;
            
            // Update status color
            const statusElement = document.getElementById('modal-status');
            if (meme.status === 'Active') {
              statusElement.className = 'font-semibold text-green-400';
            } else if (meme.status === 'Declining') {
              statusElement.className = 'font-semibold text-red-400';
            } else {
              statusElement.className = 'font-semibold text-yellow-400';
            }
            
            // Update change colors
            const change24Element = document.getElementById('modal-change');
            const change7dElement = document.getElementById('modal-change-7d');
            
            if (meme.change24h.startsWith('+')) {
              change24Element.className = 'font-bold text-green-400';
            } else {
              change24Element.className = 'font-bold text-red-400';
            }
            
            if (meme.change7d.startsWith('+')) {
              change7dElement.className = 'font-bold text-green-400';
            } else {
              change7dElement.className = 'font-bold text-red-400';
            }
            
            // Show modal
            modal.classList.remove('hidden');
          }
        });
      });
      
      // Close modal functionality
      closeModal.addEventListener('click', () => {
        modal.classList.add('hidden');
      });
      
      // Close modal when clicking outside
      modal.addEventListener('click', (e) => {
        if (e.target === modal) {
          modal.classList.add('hidden');
        }
      });
    });
  </script>

